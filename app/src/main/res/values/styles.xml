<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="long_text">
        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="detail_txt">
        <item name="android:layout_marginStart">@dimen/activity_margin</item>
        <item name="android:layout_marginEnd">@dimen/activity_margin</item>
        <item name="android:paddingTop">@dimen/activity_margin</item>
        <item name="android:fontFamily">@font/roboto</item>
    </style>


</resources>
